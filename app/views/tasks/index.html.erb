<ul id="tasks" class="list-group">
  <% @tasks.each do |task| %>
    <li class="d-flex justify-content-between list-group-item list-group-item-action list-group-item<%= task.completed ? '-light' : '' %>">
      <div class="task-info">
        <%= link_to content_tag(:i, nil, class: "m-2 far fa-#{'check-' if task.completed?}square"), complete_task_path(task), method: :put %>
        <%= link_to task.title, task_path(task) %>
      </div>
      <div class="additional">
        <div class="actions text-right">
          <%= link_to content_tag(:i, nil, class: "far fa-edit"), edit_task_path(task) %>
          <%= link_to content_tag(:i, nil, class: "far fa-trash-alt"), delete_task_path(task), method: :delete %>
        </div>
        <p class="last-updated-text text-right">Last updated <%= distance_of_time_in_words(Time.now - task.updated_at) %> ago</p>
      </div>
    </li>
  <% end %>
</ul>
