<%= form_for @task, class: "" do |f| %>
  <div class="form-group row">
    <%= f.label :title, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :details, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_area :details, class: "form-control" %>
    </div>
  </div>

  <%= f.submit class: "btn btn-primary mx-auto" %>
<% end %>
